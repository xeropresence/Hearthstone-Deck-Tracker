<UserControl x:Class="Hearthstone_Deck_Tracker.FlyoutControls.DeckHistory.DeckVersionChangeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ui="clr-namespace:HearthSim.UI;assembly=HearthSim.UI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Orientation="Vertical">
        <TextBlock Text="{Binding Header}"  FontSize="12" VerticalAlignment="Center" TextAlignment="Center" FontWeight="Medium"/>
        <ScrollViewer>
            <ui:AnimatedCardList x:Name="ListViewDeck" Cards="{Binding Cards}" Animate="False" TransitionOpacity="False"/>
        </ScrollViewer>
    </StackPanel>
</UserControl>
